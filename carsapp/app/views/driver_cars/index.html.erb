<p id="notice"><%= notice %></p>

<h1>Driver Cars</h1>

<table>
  <thead>
    <tr>
      <th>Driver</th>
      <th>Car</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @driver_cars.each do |driver_car| %>
      <tr>
        <td><%= driver_car.driver_id %></td>
        <td><%= driver_car.car_id %></td>
        <td><%= link_to 'Show', driver_car %></td>
        <td><%= link_to 'Edit', edit_driver_car_path(driver_car) %></td>
        <td><%= link_to 'Destroy', driver_car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

